.content

  %h2
    Widgets

  %table.striped
    %thead
      %tr
        %th
          Name
        %th
          Description
        %th
          Quantity On Hand

    %tbody
      - @widgets.each do |widget|
        %tr
          %td
            = widget.name
          %td
            = widget.description
          %td
            = widget.on_hand

  %br
  = link_to "View Customers Now", customers_path

